<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/layoutId"
    android:layout_height="match_parent">


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:inputType="textPersonName|textMultiLine"
    tools:context="ufabc.projeto.moduloconfigurador.ExemploFonte">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Frase para usar como exemplo "
        android:background="@drawable/textview_border"
        android:textStyle="normal"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:id="@+id/textView11"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textSize="39sp" />




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Caveat"
        android:background="@drawable/textview_border"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:id="@+id/textView4"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:background="@drawable/textview_border"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:id="@+id/textView"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        android:text="Courier New" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Lobster"
        android:background="@drawable/textview_border"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:id="@+id/textView1"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Arial"
        android:background="@drawable/textview_border"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:id="@+id/textView2"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Redefinir"
        android:background="@drawable/textview_border"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:id="@+id/textView7"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp" />

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp">

        <Space
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:text="Aa"
            android:textSize="17sp" />

        <SeekBar
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar"
            android:indeterminate="false"
            android:thumbTint="#000000"
            android:progressTint="#000000" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:text="Aa"
            android:textSize="35sp"
            android:textStyle="bold" />

        <Space
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

    </android.support.v7.widget.LinearLayoutCompat>





    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/botaoIconeId"
        android:contentDescription="BotÃ£o para ir para procima tela clique duas vezes para acionalo"
        android:background="@drawable/ic_action_goright"
        android:layout_gravity="right"
         />


</LinearLayout>
</ScrollView>
