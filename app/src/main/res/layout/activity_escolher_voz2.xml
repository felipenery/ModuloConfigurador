<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ufabc.projeto.moduloconfigurador.EscolherVoz2"
    android:gravity="center_vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Escolher a voz"
        android:background="@drawable/textview_border"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:id="@+id/textView"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textSize="39sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Voz 1"
        android:background="@drawable/textview_border"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:id="@+id/textView1"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Voz 2"
        android:background="@drawable/textview_border"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:id="@+id/textView2"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Voz 3"
        android:background="@drawable/textview_border"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:id="@+id/textView3"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Voz 4"
        android:background="@drawable/textview_border"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:id="@+id/textView4"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp" />

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="20dp"
        android:id="@+id/botaoIconeId"
        android:contentDescription="BotÃ£o para ir para proxima tela clique duas vezes para acionalo"
        android:background="@drawable/ic_action_goright"
        android:layout_gravity="right"
        />

</LinearLayout>
