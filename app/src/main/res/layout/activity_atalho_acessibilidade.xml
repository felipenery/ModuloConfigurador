<?xml version="1.0" encoding="utf-8"?>



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ufabc.projeto.moduloconfigurador.AtalhoAcessibilidade">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Selecione as opções que você quer que estejam disponíveis no atalho de acessibilidade. (Máximo 8)"
        android:background="@drawable/textview_border"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:id="@+id/textView5"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textSize="32sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/botaoInfo"
        android:contentDescription="Botão para mais informações da tela"
        android:background="@drawable/icone_info"
        android:layout_gravity="left"/>
        <Space
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/botaoIconeId"
        android:contentDescription="Botão para proxima tela"
        android:background="@drawable/ic_action_goright"
        android:layout_gravity="right"
        android:foregroundGravity="right" />
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listViewId" />



</LinearLayout>


